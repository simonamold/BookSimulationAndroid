<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="332dp"
    android:layout_height="591dp"
    tools:context=".ChTwoFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewCh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter Two"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ssnow_white_hunter" />

            <TextView
                android:id="@+id/textViewCh2Para1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Ch2Para1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewCh2Para2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Ch2Para2"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>