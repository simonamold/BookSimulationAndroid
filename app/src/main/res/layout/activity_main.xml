<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnIntroduction"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="92dp"
        android:background="@color/teal_700"
        android:backgroundTint="#00BCD4"
        android:backgroundTintMode="add"
        android:foregroundTint="#30E0F6"
        android:text="Intro"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChThree"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@color/teal_700"
        android:text="Ch 3"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnChTwo" />

    <Button
        android:id="@+id/btnChOne"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@color/teal_700"
        android:backgroundTint="#00BCD4"
        android:singleLine="true"
        android:text="Ch 1"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnIntroduction" />

    <Button
        android:id="@+id/btnChTwo"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@color/teal_700"
        android:text="Ch 2"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnChOne" />

    <Button
        android:id="@+id/btnChFour"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@color/teal_700"
        android:backgroundTint="#00BCD4"
        android:text="Ch 4"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnChThree"
        tools:ignore="TextSizeCheck,TextSizeCheck" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="205dp"
        android:layout_height="29dp"
        android:layout_marginStart="171dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="182dp"
        android:fontFamily="cursive"
        android:text="Snow White"
        android:textAlignment="center"
        android:textColor="#090909"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.bookapp.IntoductionFragment"
        android:layout_width="332dp"
        android:layout_height="591dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_intoduction" />

</androidx.constraintlayout.widget.ConstraintLayout>